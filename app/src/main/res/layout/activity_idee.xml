<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IdeeActivity">

    <TextView
        android:id="@+id/affichageTempsIdee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/ideeText"
        android:layout_width="348dp"
        android:layout_height="155dp"
        android:layout_below="@+id/affichageTempsIdee"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="17dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Si vous voyez ce texte, c'est qu'aucune idée ne s'est affichée. " />

    <Button
        android:id="@+id/autreIdeeButton"
        android:layout_width="154dp"
        android:layout_height="59dp"
        android:layout_below="@+id/affichageTempsIdee"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="99dp"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:text="Une autre !" />

    <Button
        android:id="@+id/noLikeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/affichageTempsIdee"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="436dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:text="Ne plus me proposer cette idée" />

    <Button
        android:id="@+id/likeButton"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/affichageTempsIdee"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:text="J'aime cette idée !" />

</RelativeLayout>