<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IdeeActivity">

    <TextView
        android:id="@+id/baseVideRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ideeText"
        android:layout_width="348dp"
        android:layout_height="155dp"
        android:layout_below="@+id/baseVideRelativeLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="41dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Si vous voyez ce texte, c'est qu'aucune idée ne s'est affichée. " />

    <Button
        android:id="@+id/autreIdeeButton"
        android:layout_width="154dp"
        android:layout_height="59dp"
        android:layout_below="@+id/baseVideRelativeLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="237dp"
        android:text="Une autre !" />

    <Button
        android:id="@+id/noLikeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/baseVideRelativeLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="495dp"
        android:text="Ne plus me proposer cette idée" />

    <Button
        android:id="@+id/likeButton"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/baseVideRelativeLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="79dp"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="436dp"
        android:text="J'aime cette idée !" />

</RelativeLayout>